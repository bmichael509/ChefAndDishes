@model ChefNDishes.Models.DishWrapper;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Add A dish</title>
</head>
<body>
    <div class="d-flex p-5">
    <h1>Add a Dish</h1>
    <br>
    <a href="/dishes">Home</a>
        <div class="row">
            <form asp-action="CreateDish" asp-controller="Home" method="post">
                <div class="form-group row">
                    <span class="col-sm-8 offset-sm-4 text-danger" asp-validation-for="DishForm.Name"></span>
                    <label asp-for="DishForm.Name" class="col-sm-4"></label>
                    <input asp-for="DishForm.Name" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                    <span class="col-sm-8 offset-sm-4 text-danger"  asp-validation-for="DishForm.ChefId"></span>
                    <label asp-for="DishForm.ChefId" class="col-sm-4">Chef</label>
                    <select asp-for="DishForm.ChefId" class="col-sm-8 form-control">
                        @foreach(var chef in Model.ChefDropdown)
                        {
                            <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                        }
                        </select>
                </div>
                <div class="form-group row">
                    <span class="col-sm-8 offset-sm-4 text-danger"  asp-validation-for="DishForm.Tastiness"></span>
                    <label asp-for="DishForm.Tastiness" class="col-sm-4"></label>
                    <select asp-for="DishForm.Tastiness" class="col-sm-8 form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <div class="form-group row">
                    <span class="col-sm-8 offset-sm-4 text-danger"  asp-validation-for="DishForm.Calories"></span>
                    <label asp-for="DishForm.Calories" class="col-sm-4"></label>
                    <input asp-for="DishForm.Calories" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                    <span class="col-sm-8 offset-sm-4 text-danger"  asp-validation-for="DishForm.Description" class="col-sm-4"></span>
                    <textarea asp-for="DishForm.Description" class="col-sm-8 form-control"></textarea>
                </div>
                <div class="form-group row">
                    <input value="Add Dish" type="submit">  
                </div>  
            </form>
        </div>
    </div>
</body>
</html>